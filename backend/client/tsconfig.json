{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "target": "es2017",
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "dist",
    "**/*.spec.ts"
  ]
}
